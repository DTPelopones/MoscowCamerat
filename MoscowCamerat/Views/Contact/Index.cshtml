@{
    ViewBag.Title = "Контакты - \"Московская Камерата\"";
}

@section metatags
{
    <meta name="keywords" content="Московская камерата, оркестр, камерный оркестр, контакты оркестра Московская камерата " />
    <meta name="description" content="Камерный оркестр "Московская камерата" - контакты" />
    @Styles.Render("~/bundles/violincss")
}

@section head
{


    <style rel="stylesheet">

        html,
        body,
        .view {
            height: 700px;
            background-color: rgb(76, 76, 170);
        }

        viewImage {
            height: 406px;
        }

        .navbar {
            background-color: transparent;
        }

        .scrolling-navbar {
            -webkit-transition: background .5s ease-in-out, padding .5s ease-in-out;
            -moz-transition: background .5s ease-in-out, padding .5s ease-in-out;
            transition: background .5s ease-in-out, padding .5s ease-in-out;
        }

        .top-nav-collapse {
            background-color: #1C2331;
        }

        footer.page-footer {
            background-color: #1C2331;
            margin-top: -1px;
        }

        .flex-center {
            color: #fff;
        }

        .view {
            background: url("../../img/AboutUS.jpg")no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
    </style>

    @Scripts.Render("~/bundles/jqueryunobtrusiveajaxjs")
    @Scripts.Render("~/bundles/jqueryvalidatejs")
    @Scripts.Render("~/bundles/jqueryvalidateunobtrusivejs")
}

<div class="view hm-black-strong">
    <div class="full-bg-img flex-center">
        <ul class="animated fadeInUp ulOrchestra">
            <li>
                <div id="aEvents" class="container-fluid text-xs-center" style="height: 0px;">
                    <a class="btn-floating btn-action blue darken-4 waves-effect waves-light navbar-brand-cocacolaMin contactsMK" href="#events">MK<i class="fa fa-chevron-down fa-1 navbar-brand-cocacolaMinChevronDown"></i></a>
                </div>
            <li>
                @Html.Partial("Feedback", new MoscowCamerat.Models.EmailModel())
            </li>
        </ul>
    </div>
</div>

